{
  "name": "bun-react-template",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "bun --hot src/index.ts",
    "start": "NODE_ENV=production bun src/index.ts",
    "build": "bun run scripts/build.ts",
    "publish": "bun run scripts/publish.ts",
    "deploy": "bun run build && bun run publish",
    "lint": "npm run fix && biome check src",
    "fix": "biome check --write --unsafe src"
  },
  "dependencies": {
    "bun-plugin-tailwind": "^0.1.2",
    "react": "^19",
    "react-dom": "^19",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/bun": "latest",
    "@biomejs/biome": "^2.3.4"
  }
}
